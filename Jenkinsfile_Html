pipeline {
    agent any

    stages {
        stage('Run Python Script') {
            steps {
                script {
                    sh 'python3 first_job.py'
                }
            }
        }
    }

    post {
        success {
          publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: '/home/sou/First_Job/New_repo', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
        }
    }
}

